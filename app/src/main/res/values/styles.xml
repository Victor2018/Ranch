<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarBlackNav">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--默认分割线样式-->
    <style name="base_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/color_D3D3D3</item>
    </style>

    <style name="base_line_vertical">
        <item name="android:layout_width">@dimen/dp_1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_D3D3D3</item>
    </style>

    <style name="MyOrderTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/dp_32</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyOrderTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/color_E16002</item>
        <item name="tabIndicatorHeight">@dimen/dp_7</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyOrderTabTextAppearance</item>
        <item name="tabTextColor">@color/color_99FFFFFF</item>
        <item name="tabSelectedTextColor">@color/color_E16002</item>
    </style>
</resources>
