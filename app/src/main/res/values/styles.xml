<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarBlackNav">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--默认分割线样式-->
    <style name="base_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/color_D3D3D3</item>
    </style>

    <style name="base_line_vertical">
        <item name="android:layout_width">@dimen/dp_1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_D3D3D3</item>
    </style>

    <style name="NewsCenterTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/dp_30</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="NewsCenterTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/color_03C89B</item>
        <item name="tabIndicatorHeight">@dimen/dp_6</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/NewsCenterTabTextAppearance</item>
        <item name="tabTextColor">@color/color_8C8C8C</item>
        <item name="tabSelectedTextColor">@color/color_03C89B</item>
    </style>

    <!--默认对话框样式-->
    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog">
        <!--设置背景-->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!--是否透明-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--默认对话框样式-->
    <style name="BaseNoTitleDialog" parent="BaseDialog">
        <!-- 是否有标题 -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BottomDialogAnimShow">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_exit</item>
    </style>

    <style name="BasePopWindowStyle">
        <item name="android:windowEnterAnimation">@anim/anim_base_popwindow_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_base_popwindow_fade_out</item>
    </style>

    <style name="HorizontalDottedLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_3</item>
        <item name="android:background">@drawable/horizontal_dotted_line_shape</item>
        <item name="android:layerType">software</item>
    </style>
    <style name="VerticalDottedLineStyle">
        <item name="android:layout_width">@dimen/dp_100</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/vertical_dotted_line_shape</item>
        <item name="android:layerType">software</item>
    </style>

    <!-- spinner -->
    <style name="spinner_style">
        <item name="android:background">@drawable/bg_spinner_selector</item>
        <item name="android:width">@dimen/dp_70</item>
        <item name="android:entries">@array/farm_list</item>
        <item name="android:dropDownVerticalOffset">@dimen/dp_70</item>
        <item name="android:dropDownHorizontalOffset">@dimen/dp_30</item>
    </style>

</resources>
