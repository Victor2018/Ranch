<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_388"
    android:background="@mipmap/img_live_device_bg"
    android:layout_margin="@dimen/dp_10">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_product_header" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_14"
        android:paddingLeft="@dimen/dp_21"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_28"
        android:text="1号机-设备ID-设备名称"/>

    <ImageView
        android:id="@+id/iv_live_device"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_286"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginRight="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_below="@+id/tv_title"
        android:scaleType="fitXY"
        android:src="@mipmap/img_live_device_default"/>

</RelativeLayout>