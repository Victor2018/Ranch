<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_radius_15"
    android:paddingTop="@dimen/dp_26"
    android:paddingBottom="@dimen/dp_49"
    android:paddingLeft="@dimen/dp_28"
    android:paddingRight="@dimen/dp_22"
    android:layout_margin="@dimen/dp_10">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_28"
        android:text="农场1名字"/>
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/dp_19"
        android:paddingRight="@dimen/dp_19"
        android:background="@drawable/bg_farm_reviewed"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_28"
        android:text="已审核"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_77"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_below="@+id/tv_title"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_26"
        android:text="成交额："/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_content"
        android:layout_alignParentRight="true"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/color_03C79B"
        android:textSize="@dimen/dp_24"
        android:text="￥8888.88"/>

</RelativeLayout>