<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_22"
    android:background="@drawable/bg_dlg_customer_service"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/dp_32"
        android:textColor="@color/black"
        android:text="问题反馈" />

    <EditText
        android:id="@+id/et_message"
        android:layout_width="@dimen/dp_564"
        android:layout_height="@dimen/dp_263"
        android:layout_marginTop="@dimen/dp_23"
        android:background="@drawable/bg_dotted_frame"
        android:paddingTop="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_18"
        android:hint="请输入"
        android:gravity="left|top"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_30" />

    <View
        style="@style/HorizontalDottedLineStyle"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_70"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_8C8C8C"
            android:textSize="@dimen/dp_30" />

        <View style="@style/VerticalDottedLineStyle"
            android:layout_marginBottom="@dimen/dp_14"/>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/color_03C89B"
            android:textSize="@dimen/dp_30" />
    </LinearLayout>

</LinearLayout>