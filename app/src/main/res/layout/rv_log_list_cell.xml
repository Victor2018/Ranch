<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_18"
    android:background="@mipmap/img_product_bg"
    android:layout_margin="@dimen/dp_10">

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_product_header" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_14"
        android:paddingLeft="@dimen/dp_21"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_28"
        android:text="88农场（归属）"/>


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_log_border"
        android:layout_below="@+id/iv_header"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_26"
        android:paddingLeft="@dimen/dp_9"
        android:paddingRight="@dimen/dp_9"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_28"
        android:text="日志内容日志内容日志内容日志内容日志内容日志内 容日志内容日志内容日志内容日志内容日志内容日志 内容日志内容日志内容日志内容日"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content"
        android:layout_alignLeft="@+id/tv_content"
        android:layout_marginTop="@dimen/dp_29"
        android:textColor="@color/color_8B8B8B"
        android:textSize="@dimen/dp_24"
        android:text="2020.05.20"/>

</RelativeLayout>