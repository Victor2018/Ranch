<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_280"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_7"
    app:cardCornerRadius="@dimen/dp_2"
    app:cardBackgroundColor="#131315">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_189"
            android:scaleType="fitXY"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_33"
            android:gravity="center_vertical"
            android:textColor="#80FFFFFF"
            tools:text="The Hobbit:The Battle..."
            android:textSize="@dimen/dp_22" />
        <TextView
            android:id="@+id/tv_play_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            tools:text="Watch for 95%"
            android:textSize="@dimen/dp_22" />

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_67"
        android:src="@mipmap/ic_home_more" />

</android.support.v7.widget.CardView>