<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F3F3F3"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/mCtlVideoTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="@dimen/dp_50"
            app:expandedTitleMarginEnd="@dimen/dp_65"
            app:titleEnabled="false">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/transparent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title=""
                app:layout_collapseMode="pin" >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_30">
                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:src="@mipmap/ic_left"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/dp_32"
                        android:textColor="@color/white"
                        android:text="发布新商品"/>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dp_23"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70">
                <Spinner
                    android:id="@+id/spinner_farm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/spinner_style"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_gravity="center|right"
                    android:src="@mipmap/ic_spinner_right"/>
            </FrameLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_22"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"
                android:hint="商品标题请输入*"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_223"
                android:layout_marginTop="@dimen/dp_22"
                android:paddingTop="@dimen/dp_26"
                android:paddingBottom="@dimen/dp_26"
                android:paddingLeft="@dimen/dp_19"
                android:paddingRight="@dimen/dp_19"
                android:background="@drawable/bg_transparent_border_radius_15"
                android:gravity="left|top"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"
                android:hint="产品介绍（输入文字）"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_26"
                android:textSize="@dimen/dp_26"
                android:textColor="@color/black"
                android:text="产品图片*（最多6张）"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_218"
                android:orientation="horizontal"
                android:gravity="center">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_white_border_radius_15"
                        android:layout_margin="@dimen/dp_20"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_post_goods_close"
                        android:layout_gravity="right"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_post_goods_add"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="@dimen/dp_39"
                        android:textColor="@color/color_8C8C8C"
                        android:textSize="@dimen/dp_24"
                        android:text="上传照片"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_white_border_radius_15"
                        android:layout_margin="@dimen/dp_20"
                        android:src="@mipmap/ic_add_farm"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_post_goods_close"
                        android:layout_gravity="right"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_white_border_radius_15"
                        android:layout_margin="@dimen/dp_20"
                        android:src="@mipmap/ic_add_farm"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_post_goods_close"
                        android:layout_gravity="right"/>
                </FrameLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:textSize="@dimen/dp_26"
                android:textColor="@color/black"
                android:text="产品基本信息："/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_18"
                android:textSize="@dimen/dp_26"
                android:textColor="@color/color_8C8C8C"
                android:text="预计养殖周期（天/月）*："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_13"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"
                android:hint="输入"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/dp_26"
                android:textColor="@color/color_8C8C8C"
                android:text="预计出栏时间*："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_13"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"
                android:hint="输入"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/dp_26"
                android:textColor="@color/color_8C8C8C"
                android:text="产品总数量（头）*："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_13"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"
                android:hint="输入"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/dp_26"
                android:textColor="@color/color_8C8C8C"
                android:text="猪仔品种*："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_13"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"
                android:hint="输入"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/dp_26"
                android:textColor="@color/color_8C8C8C"
                android:text="猪仔来源*："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_13"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"
                android:hint="输入"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:textSize="@dimen/dp_26"
                android:textColor="@color/black"
                android:text="产品图片*（最多6张）"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_18"
                android:textSize="@dimen/dp_26"
                android:textColor="@color/color_8C8C8C"
                android:text="总价*："/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:paddingLeft="@dimen/dp_17"
                android:background="@drawable/bg_grey_shape_radius_15"
                android:layout_marginTop="@dimen/dp_13"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_30"
                android:textColor="@color/white"
                android:text="￥8888.88"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/dp_26"
                android:textColor="@color/color_8C8C8C"
                android:text="生猪单价*："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_13"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"
                android:hint="输入"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/dp_26"
                android:textColor="@color/color_8C8C8C"
                android:text="保险*："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_13"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"
                android:hint="输入"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/dp_26"
                android:textColor="@color/color_8C8C8C"
                android:text="疫苗*："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_13"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"
                android:hint="输入"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/dp_26"
                android:textColor="@color/color_8C8C8C"
                android:text="猪舍（月）*："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_13"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"
                android:hint="输入"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/dp_26"
                android:textColor="@color/color_8C8C8C"
                android:text="代养费用（月）*："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_13"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"
                android:hint="输入"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/dp_26"
                android:textColor="@color/color_8C8C8C"
                android:text="其他商品描述（注意事项）："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_223"
                android:layout_marginTop="@dimen/dp_13"
                android:paddingTop="@dimen/dp_26"
                android:paddingBottom="@dimen/dp_26"
                android:paddingLeft="@dimen/dp_19"
                android:paddingRight="@dimen/dp_19"
                android:background="@drawable/bg_transparent_border_radius_15"
                android:gravity="left|top"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"
                android:hint="产品介绍（输入文字）"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_34"
                android:layout_marginBottom="@dimen/dp_33"
                android:background="@drawable/bg_green_shape_radius_35"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_30"
                android:text="提交审核"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>