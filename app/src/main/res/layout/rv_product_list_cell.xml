<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_268"
    android:background="@mipmap/img_product_bg"
    android:layout_margin="@dimen/dp_10">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:background="@mipmap/img_product_header" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_54"
        android:paddingTop="@dimen/dp_14"
        android:paddingLeft="@dimen/dp_21"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_28"
        android:text="88农场（归属）"/>

    <ImageView
        android:id="@+id/iv_product_img"
        android:layout_width="@dimen/dp_162"
        android:layout_height="@dimen/dp_162"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@+id/tv_title"
        android:src="@mipmap/ic_add_farm"/>

    <TextView
        android:id="@+id/tv_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_product_img"
        android:layout_toRightOf="@+id/iv_product_img"
        android:layout_marginLeft="@dimen/dp_28"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_28"
        android:text="《商品标题》"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_title"
        android:layout_alignLeft="@+id/tv_product_title"
        android:layout_marginTop="@dimen/dp_29"
        android:textColor="@color/color_8B8B8B"
        android:textSize="@dimen/dp_24"
        android:text="商品单价：￥8888元/头"/>
    <TextView
        android:id="@+id/tv_post_logs"
        android:layout_width="@dimen/dp_131"
        android:layout_height="@dimen/dp_46"
        android:layout_alignTop="@+id/tv_off_shelf"
        android:layout_toLeftOf="@+id/tv_off_shelf"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/bg_post_logs"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_24"
        android:text="发布日志"/>
    <TextView
        android:id="@+id/tv_off_shelf"
        android:layout_width="@dimen/dp_131"
        android:layout_height="@dimen/dp_46"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_22"
        android:layout_marginBottom="@dimen/dp_19"
        android:background="@drawable/bg_off_shelf"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_24"
        android:text="下架"/>

</RelativeLayout>