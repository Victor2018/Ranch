<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_54"
    android:paddingBottom="@dimen/dp_57"
    android:background="@drawable/bg_white_radius_15"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/dp_32"
        android:textColor="@color/color_03C79B"
        android:text="提现成功！" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:text="（预计12个小时内到账）"
        android:textColor="@color/color_8B8B8B"
        android:textSize="@dimen/dp_24" />


    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="@dimen/dp_343"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_52"
        android:layout_below="@+id/et_code"
        android:background="@drawable/bg_login_btn"
        android:textColor="@color/color_F3F3F3"
        android:textSize="@dimen/dp_30"
        android:text="确认"/>


</LinearLayout>