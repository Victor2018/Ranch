<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:alpha="0.95"
    android:background="@color/white"
    android:orientation="horizontal"
    android:gravity="center">

    <RadioButton
        android:id="@+id/rb_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:button="@null"
        android:drawableTop="@drawable/nav_home_rb_selector"
        android:textSize="@dimen/dp_22"
        android:gravity="center"
        android:checked="true"
        android:textColor="@color/home_bottom_nav_title_color"
        android:text="主页"/>
    <RadioButton
        android:id="@+id/rb_workbench"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:button="@null"
        android:drawableTop="@drawable/nav_workbench_rb_selector"
        android:textSize="@dimen/dp_22"
        android:gravity="center"
        android:textColor="@color/home_bottom_nav_title_color"
        android:text="工作台"/>
    <RadioButton
        android:id="@+id/rb_mine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:button="@null"
        android:drawableTop="@drawable/nav_mine_rb_selector"
        android:textSize="@dimen/dp_22"
        android:gravity="center"
        android:textColor="@color/home_bottom_nav_title_color"
        android:text="我的"/>
</RadioGroup>