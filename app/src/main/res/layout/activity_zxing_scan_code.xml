<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".ZXingScanCodeActivity">

    <com.victor.zxing.library.zxing.view.ScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_400"
        android:textColor="#80FFFFFF"
        android:textSize="@dimen/dp_24"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="@string/scan_code_tip"/>

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="@dimen/dp_415"
        android:layout_height="@dimen/dp_82"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="@dimen/dp_243"
        android:gravity="center"
        android:textSize="@dimen/dp_32"
        android:textColor="@color/color_E5A14B"
        android:background="@drawable/bg_home_scan_text"
        android:text="@string/cancel"/>

</FrameLayout>