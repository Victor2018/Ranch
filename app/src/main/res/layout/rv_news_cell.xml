<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_28"
    android:paddingRight="@dimen/dp_29"
    android:layout_margin="@dimen/dp_10">

    <ImageView
        android:id="@+id/iv_album"
        android:layout_width="@dimen/dp_217"
        android:layout_height="@dimen/dp_139"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_ost_logs"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_album"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_toRightOf="@+id/iv_album"
        android:textColor="@color/color_030303"
        android:textSize="@dimen/dp_26"
        android:text="优秀猪舍展示的文字标题"/>
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_alignLeft="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_below="@+id/tv_title"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/color_8C8C8C"
        android:textSize="@dimen/dp_22"
        android:text="个人化推荐是根据用户的兴趣和行为特征，这是 文案内容个人化推荐是根据用户的兴趣和行为特 征，这是文案内容"/>

</RelativeLayout>