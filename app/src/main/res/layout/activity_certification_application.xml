<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F3F3F3"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/mCtlVideoTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="@dimen/dp_50"
            app:expandedTitleMarginEnd="@dimen/dp_65"
            app:titleEnabled="false">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/transparent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title=""
                app:layout_collapseMode="pin" >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:src="@mipmap/ic_left"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/dp_32"
                        android:textColor="@color/white"
                        android:text="认证申请"/>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dp_22"
            android:paddingLeft="@dimen/dp_28"
            android:paddingRight="@dimen/dp_28"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_28"
                android:textColor="@color/color_03C89B"
                android:text="农场信息"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_21"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_28"
                android:textColor="@color/color_8C8C8C"
                android:text="农场联系人：*"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_21"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_28"
                android:textColor="@color/color_8C8C8C"
                android:text="联系方式：*"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_21"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_28"
                android:textColor="@color/color_8C8C8C"
                android:text="身份证号码：*"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_21"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_28"
                android:textColor="@color/color_8C8C8C"
                android:text="身份证照片：*"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_218"
                android:orientation="horizontal"
                android:gravity="bottom">
                <FrameLayout
                    android:layout_width="@dimen/dp_218"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_white_border_radius_15"
                        android:layout_margin="@dimen/dp_20"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_post_goods_close"
                        android:layout_gravity="right"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_post_goods_add"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="@dimen/dp_39"
                        android:textColor="@color/color_8C8C8C"
                        android:textSize="@dimen/dp_24"
                        android:text="上传照片"/>
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/dp_26"
                    android:textColor="@color/color_8C8C8C"
                    android:text="正面"/>
                <FrameLayout
                    android:layout_width="@dimen/dp_218"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_white_border_radius_15"
                        android:layout_margin="@dimen/dp_20"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_post_goods_close"
                        android:layout_gravity="right"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_post_goods_add"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="@dimen/dp_39"
                        android:textColor="@color/color_8C8C8C"
                        android:textSize="@dimen/dp_24"
                        android:text="上传照片"/>
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/dp_26"
                    android:textColor="@color/color_8C8C8C"
                    android:text="反面"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_28"
                android:textColor="@color/color_8C8C8C"
                android:text="家庭住址：*"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_28"
                android:textColor="@color/color_8C8C8C"
                android:text="农场名称：*"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_28"
                android:textColor="@color/color_8C8C8C"
                android:text="农场地址：*"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_28"
                android:textColor="@color/color_8C8C8C"
                android:text="农场面积：*"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_28"
                android:textColor="@color/color_8C8C8C"
                android:text="猪舍数量：*"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_28"
                android:textColor="@color/color_8C8C8C"
                android:text="营业执照：*"/>
            <FrameLayout
                android:layout_width="@dimen/dp_218"
                android:layout_height="@dimen/dp_218"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_white_border_radius_15"
                    android:layout_margin="@dimen/dp_20"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_post_goods_close"
                    android:layout_gravity="right"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_post_goods_add"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="@dimen/dp_39"
                    android:textColor="@color/color_8C8C8C"
                    android:textSize="@dimen/dp_24"
                    android:text="上传照片"/>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_28"
                android:textColor="@color/color_8C8C8C"
                android:text="其他证明："/>
            <FrameLayout
                android:layout_width="@dimen/dp_218"
                android:layout_height="@dimen/dp_218"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_white_border_radius_15"
                    android:layout_margin="@dimen/dp_20"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_post_goods_close"
                    android:layout_gravity="right"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_post_goods_add"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="@dimen/dp_39"
                    android:textColor="@color/color_8C8C8C"
                    android:textSize="@dimen/dp_24"
                    android:text="上传照片"/>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_28"
                android:textColor="@color/color_8C8C8C"
                android:text="农场照片：*"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_218"
                android:orientation="horizontal"
                android:gravity="center">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_white_border_radius_15"
                        android:layout_margin="@dimen/dp_20"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_post_goods_close"
                        android:layout_gravity="right"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_post_goods_add"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="@dimen/dp_39"
                        android:textColor="@color/color_8C8C8C"
                        android:textSize="@dimen/dp_24"
                        android:text="上传照片"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_white_border_radius_15"
                        android:layout_margin="@dimen/dp_20"
                        android:src="@mipmap/ic_add_farm"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_post_goods_close"
                        android:layout_gravity="right"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_white_border_radius_15"
                        android:layout_margin="@dimen/dp_20"
                        android:src="@mipmap/ic_add_farm"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_post_goods_close"
                        android:layout_gravity="right"/>
                </FrameLayout>
            </LinearLayout>
            <View style="@style/HorizontalDottedLineStyle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_21"
                android:textColor="@color/color_03C89B"
                android:textSize="@dimen/dp_28"
                android:text="补充信息"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17"
                android:textColor="@color/color_8C8C8C"
                android:textSize="@dimen/dp_28"
                android:text="场地员工信息："/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_28"
                android:textColor="@color/color_8C8C8C"
                android:text="员工1姓名："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_28"
                android:textColor="@color/color_8C8C8C"
                android:text="身份证号码："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_19"
                android:background="@drawable/bg_white_radius_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_24"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_28"
                android:background="@color/color_41D6B4"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_add_employee"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:textSize="@dimen/dp_30"
                    android:textColor="@color/white"
                    android:text="添加更多员工"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_marginBottom="@dimen/dp_29"
                android:background="@drawable/bg_green_shape_radius_15"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_30"
                android:text="提交认证"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>



</android.support.design.widget.CoordinatorLayout>