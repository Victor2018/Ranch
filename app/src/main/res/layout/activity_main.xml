<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/home_vpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_above="@+id/home_table_line"/>

    <View
        android:id="@id/home_table_line"
        style="@style/base_line_horizontal"
        android:layout_above="@+id/home_table_container" />

    <include
        layout="@layout/home_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_alignParentBottom="true"
        android:clipChildren="false"/>

    <TextView
        android:id="@+id/tv_schema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/dp_20"
        android:text="@string/my_play_free_tip"/>
    <TextView
        android:id="@+id/tv_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_120"
        android:gravity="center"
        android:padding="@dimen/dp_20"
        android:text="扫一扫"/>

</RelativeLayout>
