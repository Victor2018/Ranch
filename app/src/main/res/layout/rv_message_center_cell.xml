<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_25"
    android:paddingLeft="@dimen/dp_28"
    android:paddingRight="@dimen/dp_29"
    android:layout_margin="@dimen/dp_10">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_28"
        android:text="【系统消息】《消息标题》"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_alignLeft="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_below="@+id/tv_title"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/color_8C8C8C"
        android:textSize="@dimen/dp_24"
        android:text="【系统消息】《消息标题》"/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_content"
        android:layout_alignParentRight="true"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/color_03C89B"
        android:textSize="@dimen/dp_24"
        android:text="2020.05.18"/>

    <View
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_title"
        android:background="@drawable/message_notify_tip"/>

    <View
        style="@style/base_line_horizontal"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="@dimen/dp_35"/>
</RelativeLayout>