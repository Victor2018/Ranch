<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/img_news_bg"
    android:paddingLeft="@dimen/dp_25"
    android:paddingRight="@dimen/dp_25"
    android:paddingTop="@dimen/dp_22"
    android:paddingBottom="@dimen/dp_31"
    android:layout_marginLeft="@dimen/dp_25"
    android:layout_marginRight="@dimen/dp_25"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_8">

    <ImageView
        android:id="@+id/iv_album"
        android:layout_width="@dimen/dp_192"
        android:layout_height="@dimen/dp_192"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_ost_logs"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/iv_album"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintLeft_toRightOf="@+id/iv_album"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_28"
        android:text="《资讯标题》"/>
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="@dimen/dp_320"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/color_8C8C8C"
        android:textSize="@dimen/dp_24"
        android:text="资讯内容描述猪猪的日常生活资讯内容描述猪猪的日常生活资讯内容描述猪猪的日常生活"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_album"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/color_03C89B"
        android:textSize="@dimen/dp_24"
        android:text="2020-05-13"/>

</android.support.constraint.ConstraintLayout>